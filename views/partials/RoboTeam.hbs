<form method="post" id="robo-info">
    <div class="form-group">
        <label for="teamName">Team Name</label>
        <input type="text" class="form-control" id="teamName" name="teamname" required>
        <small class="form-text text-muted">Alone we can do so little, together we can do so much.</small>
    </div>
    <div class="form-group">
        <label for="events">Events you want to participate in</label>
        <select multiple name="events" class="form-control" id="events" size="4" style="padding:15px" required>
            <option>RoboWar</option>
            <option>LFR (Line following robot)</option>
            <option>Robo Soccer</option>
        </select>
        <small class="form-text text-muted">ctrl select multiple events</small>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <input type="text" name="memname" class="form-control" placeholder="Name" readonly value="{{user.username}}"
                required>
            <small class="form-text text-muted">Name</small>
        </div>
        <div class="form-group col-md-6">
            <input type="text" name="mob" class="form-control" placeholder="Mobile number" readonly
                value="{{user.mobile}}" pattern="[6789][0-9]{9}" required>
            <small class="form-text text-muted">You obviously have one</small>
        </div>
    </div>
    {{#each roboNumber}}
    <label>Member {{this}}</label>
    <div class="form-row">
        <div class="form-group col-md-6">
            <input type="text" name="memname" class="form-control" placeholder="Name">
            <small class="form-text text-muted">Name</small>
        </div>
        <div class="form-group col-md-6">
            <input type="text" name="mob" class="form-control" placeholder="Mobile number" pattern="[6789][0-9]{9}">
            <small class="form-text text-muted">You obviously have one</small>
        </div>
    </div>
    {{/each}}
    <br>
    <button type="submit" class="btn btn-info">Submit</button>

</form>

<div class="modal fade" id="roboTeam" data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="padding: 20px;">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <div class="d-flex justify-content-center">
                <p style="font-size:1.4em;" id="team-status">Sending...</p>
            </div>
        </div>
    </div>
</div>